{
  "name": "tslibtemplate",
  "version": "0.0.1",
  "description": "A template for creating TypeScript projects",
  "keywords": [
    "typescript",
    "template"
  ],
  "license": "MIT",
  "author": "Nathan Abramson",
  "private": false,
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "prettier": "npx prettier --write src/**/*.{ts,tsx,css,scss,html,json,js}",
    "tsc": "npx tsc",
    "tsc-watch": "npx tsc -w",
    "build": "npx rollup -c rollup.config.js",
    "build-watch": "npx rollup -w -c rollup.config.js",
    "test": "npx jest",
    "test-watch": "npx jest --watchAll",
    "lint": "npx eslint src/**/*.{js,ts,tsx}",
    "start": "concurrently npm:test-watch npm:tsc-watch npm:build-watch"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@types/jest": "^28.1.7",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "concurrently": "^7.3.0",
    "eslint": "^8.22.0",
    "jest": "^28.1.3",
    "prettier": "^2.7.1",
    "rollup": "^2.78.0",
    "rollup-plugin-typescript2": "^0.32.1",
    "ts-jest": "^28.0.8",
    "typescript": "^4.7.4"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "rootDir": "./src",
    "testMatch": [
      "**/*.spec.ts",
      "**/*.spec.js"
    ],
    "moduleNameMapper": {
      "^@lib/(.*)$": "<rootDir>/lib/$1",
      "^@test/(.*)$": "<rootDir>/test/$1"
    }
  }
}
